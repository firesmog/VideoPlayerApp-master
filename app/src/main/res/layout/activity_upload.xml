<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiongying.videoplayerapp.upload.UploadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="#CCFFCC">
        <ImageView
            android:id="@+id/iv_myload"
            android:onClick="true"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_headl"/>
        <TextView
            android:id="@+id/tv_myupload"
            android:onClick="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firesmog"
            android:textSize="30dp"
            />
        <ImageView
            android:id="@+id/iv_setting"
            android:onClick="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_sett"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="最近播放"
            android:textSize="30dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="0"/>
        <ImageView
            android:onClick="true"
            android:id="@+id/iv_lastplay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="最近缓存"
            android:textSize="30dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="0"/>
        <ImageView
            android:onClick="true"
            android:id="@+id/iv_cache"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="本地视频"
            android:textSize="30dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="5"/>
        <ImageView
            android:onClick="true"
            android:id="@+id/iv_morelocal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mysaveOrder"
            android:onClick="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="收藏订阅"
            android:textSize="30dp"/>
        <TextView
            android:onClick="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_mysaveOrder"
            android:onClick="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>

</LinearLayout>
