<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_infomation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiongying.videoplayerapp.upload.InfomationActivity">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号详情"
        android:textSize="40dp"
        android:background="#669900"
        />
    <TextView
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:text="基本信息"
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="27dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="firesmog"
            android:textSize="27dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/ic_headl"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="账号"
            android:textSize="27dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
            android:layout_margin="10dp"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑头像"
            android:textSize="27dp"
            />
            <ImageView
                android:onClick="true"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="性别"
            android:textSize="27dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_margin="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保密"
                android:textSize="27dp"
                />
            <ImageView
                android:onClick="true"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="年龄段"
            android:textSize="27dp"
            />

        <ImageView
            android:onClick="true"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="个性签名"
            android:textSize="27dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_margin="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="27dp"
                />
            <ImageView
                android:onClick="true"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:paddingLeft= "10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:text="安全设置"
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="修改密码"
            android:textSize="27dp"
            />

            <ImageView
                android:onClick="true"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="设置手势登录"
            android:textSize="27dp"
            />
        <ImageView
            android:onClick="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="隐藏本地视频"
            android:textSize="27dp"
            />
        <ImageView
            android:onClick="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="安全邮箱"
            android:textSize="27dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:layout_margin="10dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textSize="27dp"
                />
            <ImageView
                android:onClick="true"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_right"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
